<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5DB6C5"
    android:orientation="vertical"
    tools:context=".MainActivity"
    tools:ignore="ExtraText,NamespaceTypo"><![CDATA[

    android:layout_width="258dp"
    android:layout_height="114dp"
    android:layout_marginTop="80dp"
    android:background="#FFEB3B"
    android:text="Grade Calculator"
    android:textSize="30sp" />



    ]]>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:background="#CD673AB7"
        android:text="Grade Calculatoer"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="36sp"
        android:textStyle="italic"
        android:typeface="serif" />

    <EditText
        android:id="@+id/editTextTextPersonName"
        android:layout_width="203dp"
        android:layout_height="56dp"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="60dp"
        android:background="#BA009688"
        android:ems="10"
        android:hint="Quizes %15"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/editTextTextPersonName4"
        android:layout_width="198dp"
        android:layout_height="56dp"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="50dp"
        android:background="#BA009688"
        android:ems="10"
        android:hint="Homework %25"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/editTextTextPersonName3"
        android:layout_width="198dp"
        android:layout_height="49dp"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="50dp"
        android:background="#BA009688"
        android:ems="10"
        android:hint="Mid terms 30%"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textSize="24sp"
        android:textStyle="italic" />

    <EditText
        android:id="@+id/editTextTextPersonName2"
        android:layout_width="200dp"
        android:layout_height="44dp"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="50dp"
        android:background="#BA009688"
        android:ems="10"
        android:hint="Final 30%"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textSize="24sp" />

    <Button
        android:id="@+id/button"
        android:layout_width="195dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="35dp"
        android:background="#D73F51B5"
        android:text="CALCULATE"
        android:textSize="24sp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/Result"
        android:layout_width="195dp"
        android:layout_height="44dp"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="30dp"
        android:background="#E93F51B5"
        android:text="Result"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="30sp"
        android:textStyle="bold|italic" />

</LinearLayout>